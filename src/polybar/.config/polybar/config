[bar/main]
monitor =
bottom = false
module-margin = 2
padding = 1
wm-restack = bspwm

background = #00fafafa
foreground = #aaaaaa

offset-y = 0

border-size = 
border-color = 

font-0 = "Operator Mono SSm Medium:size=11;2"
font-1 = "Source Han Sans JP:size=11;2"
font-2 = "Noto Sans Symbols:size=10;1"
font-3 = "Noto Sans Symbols2:size=10;1"

modules-left = date xwindow
modules-center = bspwm
modules-right = wlan pulseaudio cpu memory filesystem
separator = "|"

[global/wm]
margin-top = 0

[module/xwindow]
type = internal/xwindow
label = %title:0:70:...%

[module/date]
type = internal/date
interval = 5

date = "%A %m/%d/%y"
date-alt = %a %b %d

time = "%I:%M %p"
time-alt = %I:%M%p

format-prefix =
format-foreground = #aaa

label = "%date% %time%"

[module/bspwm]
type = internal/bspwm
label-focused = " %name% "
label-focused-foreground = #CB1B45
label-focused-background = #000000
label-occupied = " %name% "
label-occupied-foreground = #aaa
label-occupied-background = #000
label-empty = " %name% "
label-empty-foreground = #444444

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu: "
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem: "
label = %percentage_used:2%%

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /
mount-1 = /data

label-mounted = %mountpoint%: %percentage_free%% of %total%

; Seconds to sleep between updates
; Default: 30
interval = 10

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing between entries
; Default: 2
spacing = 2

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_07_04.0.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

label-muted = "muted"
label-muted-foreground = #666
label-volume = "vol: %percentage%%"

[module/wlan]
type = internal/network
interface = wlan0
interval = 5.0

format-connected = <label-connected> <ramp-signal> 
label-connected = %essid%

label-disconnected =

ramp-signal-0 = no signal
ramp-signal-1 = 25%
ramp-signal-2 = 50%
ramp-signal-3 = 75%
ramp-signal-4 = full signal
